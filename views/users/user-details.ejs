<%- include('../includes/header.ejs') %>

    <main class="centered">
        <h1>
            <%= user.name %>
        </h1>
        <hr>
        <div>
            <img src="https://ps.w.org/user-avatar-reloaded/assets/icon-256x256.png" alt="<%= user.name %>">
        </div>
        <h2>
            <%= user.age %>
        </h2>
        <p>
            <%= user.description %>
        </p>
        <p>
            <%= user.roleId.name %>
        </p>
        <div class="card__actions">
            <a href="/edit-user/<%= user._id %>" class="btn">Edit</a>
            <a href="/delete-user/<%= user._id %>" class="btn">Delete</a>
        </div>
    </main>

    <%- include('../includes/footer.ejs') %>