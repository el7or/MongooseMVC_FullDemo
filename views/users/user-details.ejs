<%- include('../includes/header.ejs') %>

    <main class="centered">
        <h1>
            <%= user.name %>
        </h1>
        <hr>
        <div class="image">
            <img src="/<%= user.imageUrl %>" alt="<%= user.name %>">
        </div>
        <h2>
            <%= user.age %>
        </h2>
        <p>
            <%= user.description %>
        </p>
        <p>
            <%= user.roleId.name %>
        </p>
        <div class="card__actions">
            <a href="/edit-user/<%= user._id %>" class="btn">Edit</a>
            <a href="/delete-user/<%= user._id %>" class="btn">Delete</a>
            <a href="/download-user/<%= user._id %>">Download as PDF</a>
        </div>
    </main>

    <%- include('../includes/footer.ejs') %>